{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": false,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "test/*.ts",
    "test/*.js",
    "test/**/*.ts",
    "test/**/*.js",
    "system-test/*.ts",
    "system-test/*.js",
    "system-test/**/*.ts",
    "system-test/**/*.js"
  ]
}
